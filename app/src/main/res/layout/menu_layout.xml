<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/lvBackground">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?toolbarColor"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:title="弹出菜单"
    app:titleTextColor="?titleColor"


    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/menu_setting_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="?settingIcon"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/menu_setting_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="?attr/tvMainColor"

                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/allNote_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="?allNoteTag"
                android:layout_gravity="center"
                 />
            <TextView
                android:id="@+id/allNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="全部笔记"
                android:textColor="?attr/tvMainColor"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.2"/>
        <ListView
            android:id="@+id/lv_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="?attr/tvBackground">
            <ImageView
                android:id="@+id/add_tag_image"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="?addTag"/>
            <TextView
                android:id="@+id/add_tag"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="新建标签"
                android:gravity="center_vertical"
                android:textColor="?attr/tvMainColor"
                android:background="?attr/tvBackground"
                android:textSize="24sp"
                android:layout_marginStart="12dp"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>